<div class="row">
  <div class="col-xs-12">
    <%= form_for(task) do |f| %>
      <% if task.errors.any? %>
        <div id="error_explanation">
         <ul>
          <% task.errors.full_messages.each do |task| %>
            <li><%= task %></li>
      <% end %>
         </ul>
        </div>
    <% end %>
    
   <div class="form-group">
　    <%= f.label :status, 'ステータス' %>
      <%= f.text_field :status, class: 'form-control' %>
   </div>
   <div class="form-group">
    <%= f.label :content, 'メッセージ' %>
    <%= f.text_field :content, class: 'form-control' %>
   </div>
    <%= f.submit '投稿' %>
  <% end %>

  <%= link_to '一覧に戻る', tasks_path %>
  
  </div>
</div>